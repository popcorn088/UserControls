<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="UserControlsSample.ComplexCoefsTableSample.ComplexCoefsTablePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:UserControlsSample.ComplexCoefsTableSample"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:cct="using:UserControls.ComplexCoefsTable"
    xmlns:converter="using:UserControls.Converters"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    <Page.Resources>
        <converter:VisibilityConverter x:Key="VisibilityConverter"/>
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <cct:ComplexCoefsTable
            Grid.Row="0"
            ComplexCoefs="{Binding ComplexCoefs}"
            IndexHeader="{Binding IndexHeader, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
            RealColumnHeader="{Binding RealColumnHeader, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
            ImaginaryColumnHeader="{Binding ImaginaryColumnHeader, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
            IndexVisibility="{Binding IndexVisibility, Mode=TwoWay}"
            CheckBoxVisibility="{Binding CheckBoxVisibility, Mode=TwoWay}"/>
        <StackPanel Grid.Row="1">
            <TextBlock Text="IndexHeader" />
            <TextBox Text="{Binding IndexHeader, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
            <TextBlock Text="RealColumnHeader" />
            <TextBox Text="{Binding RealColumnHeader, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
            <TextBlock Text="ImaginaryColumnHeader" />
            <TextBox Text="{Binding ImaginaryColumnHeader, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
            <TextBlock Text="IndexVisibility"/>
            <ComboBox
                x:Name="indexVisibility"
                SelectedItem="{Binding IndexVisibility, Mode=TwoWay, Converter={StaticResource VisibilityConverter}}">
                <x:String>Collapsed</x:String>
                <x:String>Visible</x:String>
            </ComboBox>
            <TextBlock Text="CheckBoxVisibility"/>
            <ComboBox
                x:Name="checkBoxVisibility"
                SelectedItem="{Binding CheckBoxVisibility, Mode=TwoWay, Converter={StaticResource VisibilityConverter}}">
                <x:String>Collapsed</x:String>
                <x:String>Visible</x:String>
            </ComboBox>
        </StackPanel>
    </Grid>
</Page>
